<div id='profile-page'>

  {{#if userInSession}}

    <form class='profile-form' action='/userProfile' method='post' enctype='multipart/form-data'>
      <h2 class='text-center mb-5'>Welcome, {{userInSession.username}}!</h2>
      <div class='user-profile-container'>
        <div class='upload-img-container'>
          <img class='img-fluid profile-img' src='{{userInSession.imgProfile}}' alt='profile image' />
          <label class='mb-2 mt-3' for='imgUrl'> Upload Profile Picture</label>
          <input id='imgUrl' type='file' name='profileUrl' />
        </div>
        <div class='about-me-container'>
          <textarea name='description' id='' cols='30' rows='10'></textarea>
          <h3>About me</h3>
          <button class='mt-3 profile-submit-btn' id='profile-submit-btn'>Confirm details</button>
        </div>
      </div>
    </form>

    <h3 class='mt-5 mb-5' id=''>Your uploaded gems:</h3>
    <div class='profile-upload text-center' id='up-gems'>
      {{#each gems}}
        <div class='text-center profile-upload-info'>
          <img class='profile-gem-img' src='{{imgUrl}}' alt='local gem' />
          <h3 class='mt-3'>{{venueName}}</h3>
          <h3 class='gem-description merri'>"{{description}}"</h3>
          <form action='/gems/{{this._id}}/delete' method='POST'>
            <button class='submit-btn mont main-submit-btn fs-6 p-2'>Delete Gem</button>
          </form>
        </div>
      {{/each}}
    </div>

  {{else}}
    <p>Still no logged in user, sorry!</p>
  {{/if}}


</div>