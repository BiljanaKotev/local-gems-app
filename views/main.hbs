<div class='main-form-container'>
  <form class='main-form' id='main-form' action='/search' method='GET'>

    <div class='search-input-container'>
      <input class='main-input' id='search-input' type='text' name='localGem' placeholder='Search for local gem' required='true' />
      <i class='fa-solid fa-magnifying-glass fa-2x search-icon'></i>

    </div>
    <div class='select-container'>
      <select class='main-input select-input' name='location' id='location-select' required='true'>
        <option value=''>--Choose a location--</option>
        <option value='Ohrid'>Ohrid</option>
        <option value='Madrid'>Spain</option>
        <option value='Paris'>Paris</option>
        <option value='London'>London</option>
        <option value='London'>Istanbul</option>
      </select>
      <div class='main-submit-btn-container'> <button class='main-submit-btn' id='location-btn' type='submit'>Submit</button></div>

    </div>

  </form>

</div>

{{#if errorMsg}}
  <span class='error'>
    {{errorMsg}}
  </span>
{{/if}}

<div class='main-heading-container'>
  <h1 class='text-center'>Local Gems</h1>
  <div class='gem-container'>
    {{#each gems}}
      <div>

        <img class='gem-img img-fluid' src='{{imgUrl}}' alt='local gem' />
        <div class='gem-info-container'>
          <h3 class=''>{{venueName}}</h3>
          <h3 class='gem-description'>"{{description}}"</h3>
        </div>

      </div>
    {{/each}}
  </div>
</div>