<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <title>{{appTitle}}</title>
    <script src='https://kit.fontawesome.com/c7b23fc763.js' crossorigin='anonymous'></script>
    <link
      href='https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;1,100;1,200;1,300;1,400;1,500&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>
  <body class='{{bodyClass}}' id='body'>

    <nav class='nav-bar' id='nav-bar'>
      <a href='/'> <img class='logo' src='https://i.postimg.cc/sxHf2vP0/logo.png' alt='logo' /></a>
      <ul class='nav-ul' id='nav-ul'>

        {{#if userInSession}}

          <li><a href='/main'>Local Gems</a></li>
          <li><a href='/userProfile'> Profile</a></li>
          <li><a href='/create'>Create</a></li>
          <li>
            <form action='/logout' method='POST'>
              <button class='home-btn' id='logout-btn'>Logout</button>
            </form>
          </li>

        {{/if}}
        {{#unless userInSession}}
          <li> <a class='home-btn signup-btn' href='/signup'>Signup</a></li>
          <li><a class='home-btn login-btn' href='/login'>Login</a></li>
          <li><a class='local-gems-link' href='/main'>Local Gems</a></li>
        {{/unless}}

      </ul>
      <div class='buttons-container'>
        <button class='mobile-menu-container' id='mobile-bar'>
          <i class='fa-solid fa-bars mobile-menu mobile-bar'></i>
        </button>
        <button class='mobile-menu-container' id='mobile-close'>
          <i class='fa-solid fa-x mobile-menu mobile-close'></i>
        </button>
      </div>

    </nav>

    {{{body}}}
    <footer class='text-center'>Designed and Coded by Biljana Kotevska Open Sourced on <a href='https://github.com/BiljanaKotev/local-gems-app' target='_blank'>Github</a></footer>

    <script src='/js/script.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm'
      crossorigin='anonymous'
    ></script>

  </body>

</html>