<div id='login-form'>
  <h2 class='text-center margin-top-150 mb-5'>Login</h2>

  <form class='login-form' action='/login' method='POST'>

    <div class='mb-3'>
      <label for='email'></label>
      <input class='login-input p-1' id='email' type='email' name='email' placeholder='Email' />
    </div>

    <div>
      <label for='password'></label>
      <input class='login-input p-1' id='password' type='password' name='password' placeholder='Password' />
    </div>
    <button class='mt-5 login-btn' type='submit'>Login</button>

    {{#if errorMessage}}
      <p class='error'>{{errorMessage}}</p>
    {{/if}}
  </form>

</div>
<div style='width: 100%; height: 25%;'></div>